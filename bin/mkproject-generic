#! /usr/bin/env bash

set -e

BASEDIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )/.." &> /dev/null && pwd )

if [[ $# -ne 1 ]]; then
  echo "Usage: `basename $0` <NAME>"
  exit 1
fi

NAME="$1"

if [[ -e "${NAME}" ]]; then
  echo "'${NAME}' dir already exists"
  exit 1
fi

mkdir -p "${NAME}"

cd "${NAME}"

git init

git ci --allow-empty -m "Initial empty commit"

cp -RLv "${BASEDIR}/template/generic/" .

pre-commit install

git add .

git ci -m "Add skeleton files"
